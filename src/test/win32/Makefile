SUBDIRS = ebox eepromtool red_test simple_test slaveinfo firm_update

all: subdirs

subdirs:
	@for dir in $(SUBDIRS); do \
	($(MAKE) -C $$dir all) || exit; \
	done

clean:
	@for dir in $(SUBDIRS); do \
	($(MAKE) -C $$dir clean) \
	done

